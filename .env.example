# OpenStudent Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://openstudent:your-secure-password@localhost:5432/openstudent?schema=public"
POSTGRES_USER=openstudent
POSTGRES_PASSWORD=your-secure-password
POSTGRES_DB=openstudent

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=your-redis-password

# ============================================
# MINIO (S3) CONFIGURATION
# ============================================
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=password123
MINIO_BUCKET_NAME=openstudent-files
MINIO_USE_SSL=false

# ============================================
# JWT CONFIGURATION
# ============================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=7d

# ============================================
# BACKEND API CONFIGURATION
# ============================================
API_PORT=3000
API_HOST=localhost
NODE_ENV=development
CORS_ORIGIN=http://localhost:3001

# ============================================
# WEB APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXTAUTH_URL=http://localhost:3001
NEXTAUTH_SECRET=your-nextauth-secret-key-change-this

# ============================================
# MOBILE APP CONFIGURATION
# ============================================
EXPO_PUBLIC_API_URL=http://localhost:3000

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@openstudent.org

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_TTL=900
AUTH_RATE_LIMIT_MAX=5

# ============================================
# FILE UPLOAD LIMITS
# ============================================
MAX_FILE_SIZE=52428800
ALLOWED_MIME_TYPES=image/*,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.*

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=debug
